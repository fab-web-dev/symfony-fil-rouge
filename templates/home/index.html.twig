{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="banner"></div>
    <div class="section-all">
    <section class="section section-left">
        <h2 class="section-title">Dernier article</h2>
        <article class="article">
            <a href="{{path ("post_view",{slug:post.slug})}}" class="article-link date-style">
                <figure class="article-figure">
                    <img class="article-img" src="{{post.image}}" alt="photo du dernier article">
                    <figcaption class="article-figcaption">{{post.title}}</figcaption>
                </figure>
                <p>publi√© {{post.createdAt | date| ago}}</p>
            </a>
        </article>
    </section>
    <section class="section section-split section-hide-lc">
        <h2 class="section-title">Articles populaires</h2>
        <div class="section-container">
        {% if(postsPopular | length > 0) %}
        {% for post in postsPopular %}
            <article class="article">
                <a href="{{path ("post_view",{slug:post.slug})}}" class="article-link">
                    <figure class="article-figure">
                        <img class="article-img" src="{{post.image}}" alt="photo article 1">
                        <figcaption class="article-figcaption">{{post.title}}</figcaption>
                    </figure>
                </a>
            </article>
            {% endfor %} 
        {% endif %}
        </div>
    </section>
    </div>

{% endblock %}
